{
  "compilerOptions": {
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@libs/*": ["src/libs/*"]
    }
  },
  "include": ["*.ts", "src/shims.d.ts", "src/index.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".vscode/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
